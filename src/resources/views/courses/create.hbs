<div class="mt-4">
  <h3>Dang khoa hoc</h3>

  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Ten khoa hoc</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Nhap ten khoa hoc"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mo ta khoa hoc</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        placeholder="Nhap mo ta khoa hoc"
        name="description"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="videoId">VideoId khoa hoc</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        placeholder="Nhap video id"
        name="videoId"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>