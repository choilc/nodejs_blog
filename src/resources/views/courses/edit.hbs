<div class="mt-4">
  <h3>Edit course</h3>

  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Ten khoa hoc</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Nhap ten khoa hoc"
        name="name"
        value="{{course.name}}"
      />
    </div>
    <div class="form-group">
      <label for="description">Mo ta khoa hoc</label>
      <textarea
        class="form-control"
        id="description"
        placeholder="Nhap mo ta khoa hoc"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">VideoId khoa hoc</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        placeholder="Nhap video id"
        name="videoId"
        value="{{course.videoId}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>